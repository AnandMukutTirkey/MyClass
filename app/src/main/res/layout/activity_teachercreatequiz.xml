<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="0dp">

        <EditText
            android:background="@drawable/rounded_corner_text"
            android:elevation="10dp"
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/option1"
            android:layout_alignEnd="@+id/correctanswer"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="question"
            android:inputType="textMultiLine"
            app:layout_constraintBottom_toTopOf="@+id/option1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/qno"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:background="@drawable/rounded_corner_text"
            android:elevation="10dp"
            android:id="@+id/option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/option2"
            android:layout_alignStart="@+id/option2"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="option A"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="65dp" />

        <EditText
            android:background="@drawable/rounded_corner_text"
            android:elevation="10dp"
            android:id="@+id/option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/option3"
            android:layout_alignEnd="@+id/correctanswer"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="option B"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="61dp" />

        <EditText
            android:background="@drawable/rounded_corner_text"
            android:elevation="10dp"
            android:id="@+id/option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/option4"
            android:layout_alignEnd="@+id/correctanswer"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="option C"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="122dp" />

        <EditText
            android:background="@drawable/rounded_corner_text"
            android:elevation="10dp"
            android:id="@+id/option4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/correctanswer"
            android:layout_alignEnd="@+id/correctanswer"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="option D"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="183dp" />

        <EditText
            android:background="@drawable/rounded_corner_text"
            android:elevation="10dp"
            android:id="@+id/marks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="marks"
            android:inputType="number" />

        <Spinner

            android:gravity="center"
            android:id="@+id/correctanswer"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_above="@+id/submit"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:entries="@array/correctanswer"
            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="229dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:background="@drawable/rounded_corner_login"
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:layout_marginRight="50dp"
                />

        <Button
            android:background="@drawable/rounded_corner_login"
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="submit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/correctanswer" />


        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>